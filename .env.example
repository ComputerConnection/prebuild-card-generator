# PC Prebuild Spec Card Generator - Environment Configuration
# Copy this file to .env and fill in your values

# Google Sheets API (optional - for importing builds from spreadsheets)
VITE_GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here

# Email Service (optional - for sending cards via email)
VITE_EMAIL_SERVICE_URL=https://your-email-service.example.com/send
VITE_EMAIL_FROM_ADDRESS=noreply@yourstore.com

# Application Settings
VITE_APP_NAME=PC Prebuild Spec Card Generator
VITE_MAX_HISTORY_SIZE=50
VITE_DEFAULT_CARD_SIZE=price

# Storage Settings
VITE_STORAGE_PREFIX=prebuild-card-generator
VITE_STORAGE_VERSION=1

# Feature Flags (optional)
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
